<h1 class="ui center aligned header">Welcome to the Chat App</h1>
<h2 class="ui center aligned icon header">
  <i class="circular red power icon"></i>
  Log in or sign up to continue
</h2>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_with scope: :session, url: login_path, class: "ui form", local: true do |f| %>
        <div class="field">
          <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Login", class: "ui red submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <%= link_to signup_path, class: "item" do %>
        <div class="ui red big button">
          <i class="signup icon"></i>
          Sign Up
        </div>
      <% end %>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>